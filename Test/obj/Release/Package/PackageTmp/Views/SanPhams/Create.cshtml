@model Test.Models.SanPham

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/_QT_DangSP.cshtml";
}

@using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenSP, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               placeholder = "Nhập tên sản phẩm",
               @id = "T3"

           }
       })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger_TenSP" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("MaHangSP", null, htmlAttributes: new
       {
           @class = "form-control",
           @id = "W4"
       })
            @Html.ValidationMessageFor(model => model.MaHangSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DongSP, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
           placeholder = "Nhập dòng sản phẩm",
           @id = "W5"
       }
            })
            @Html.ValidationMessageFor(model => model.DongSP, "", new { @class = "text-danger_DongSP" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ThongTinChiTietSP, new { style = "max-width:100%", @id = "S4" })
            @Html.ValidationMessageFor(model => model.ThongTinChiTietSP, "", new { @class = "text-danger_TTCT" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <img width="100" height="100" id="output" />
            <input type="file" required="required" name="file" id="file" accept="image/x-png,image/gif,image/jpeg" onchange="loadFile(event)" />
            @Html.ValidationMessageFor(model => model.HinhAnhSP, "", new { @class = "text-danger" })
            <p id="Error_Image">@ViewBag.msg</p>
        </div>
    </div>

    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DonGiaGoc, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @id = "W1",
               @type = "number",
               placeholder = "0đ"
           }
       })
            @Html.ValidationMessageFor(model => model.DonGiaGoc, "", new { @class = "text-danger_GiaGoc" })
        </div>
    </div>

    @*<script>
            function thousands_separators(num) {
                var num_parts = num.toString().split(".");
                num_parts[0] = num_parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                return num_parts.join(".");
            }
        </script>*@

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DonGiaKM, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               placeholder = "0đ",
               @type = "number",
               @id = "txt_DonGiaKM"
           }
       })
            @Html.ValidationMessageFor(model => model.DonGiaKM, "", new { @class = "text-danger_GiaKM" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.TrangThaiSP, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
           placeholder = "Tình trạng sản phẩm",
           @id = "W3"
       }
            })
            @Html.ValidationMessageFor(model => model.TrangThaiSP, "", new { @class = "text-danger_TinhTrang" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.SL, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
           placeholder = "Nhập số lượng sản phẩm",
           @id = "T9",
           @type = "number"
       }
            })
            @Html.ValidationMessageFor(model => model.SL, "", new { @class = "text-danger_SoLuong" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" id="myBtn" />
        </div>
    </div>
</div>
}


<div class="Header">

    <div class="Header">
        <img src="~/Images/user_QT.png"
             id="User_icon"
             width="45" />
        <a href="~/SanPhams/QT_SanPham">
            <img id="Logo_Header"
                 src="~/Images/bird.png"
                 width="99" />
            <p id="Text_Header">LaptopNganNgo</p>
        </a>


        <a href="~/SanPhams/QT_SanPham">
