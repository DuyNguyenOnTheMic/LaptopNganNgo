@model Test.Models.KhachHang

@{
    ViewBag.Title = "Thanh toán - Địa chỉ";
    Layout = "~/Views/_TT_DiaChi.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.HiddenFor(model => model.MaKH)

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
           placeholder = "Nhập họ tên",
           @id = "NhapHoten"
       }
            })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "HoTen_Constraint" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div id="lb_nam">Nam</div>
            @Html.RadioButtonFor(model => model.GioiTinh, "Nam", new { @id = "GT_Nam" })
            <div id="lb_nu">Nữ</div>
            @Html.RadioButtonFor(model => model.GioiTinh, "Nữ", new { @id = "GT_Nu" })
            <div id="lb_khac">Khác</div>
            @Html.RadioButtonFor(model => model.GioiTinh, "Khác", new { @id = "GT_Khac" })

            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "GioiTinh_Constraint" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.DienThoai, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    @id = "NhapSDT",
                    placeholder = "Nhập số điện thoại",
                    oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);",
                    @type = "number",
                    maxlength = "10"
        }
            })
            @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "SĐT_Constraint" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">

            @Html.EditorFor(model => model.NgaySinh, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @id = "NhapNgaysinh",
               placeholder = "Nhập ngày sinh",
               type = "text",
               maxlength = 10
           }
       })
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "NgaySinh_Constraint" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.DiaChi, new
       {
           @class = "form-control",
           @id = "NhapDiachi",
           placeholder = "Nhập địa chỉ"
       })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "DiaChi_Constraint" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Email, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
       }
            })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.MatKhau, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @value = Model.MatKhau.ToString(),
               @type = "hidden"
           }
       })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.XacNhanMK, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @value = Model.MatKhau.ToString(),
               @type = "hidden"
           }
       })
            @Html.ValidationMessageFor(model => model.XacNhanMK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.VaiTro, new
            {
                htmlAttributes = new
       {
           @class = "form-control",
       }
            })
            @Html.ValidationMessageFor(model => model.VaiTro, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="Btn_CapNhat" type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
</div>
}

