    <label id="MK" for="psw"><p>Mật khẩu</p></label>
    <input id="MatKhau" type="password" name="psw" required>

    <label id="XNMK" for="psw"><p>Xác nhận mật khẩu</p></label>
    <input id="XacNhan" type="password" name="psw" required>

    <label><p>Hoặc đăng ký bằng:</p></label>

        <label id="DK"><p>Đăng ký</p></label>
    
        <a href="https://localhost:44357/TT_DangNhap/Index">
            <button id="DN"><p>Đăng nhập</p></button>
        </a>


        <a href="https://localhost:44357/TT_DiaChi/Index">
            <button id="myBtn">Đăng ký</button>
        </a>

    <div id="myModal" class="modal">

        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Đăng ký thành công !!</p>
        </div>
    </div>



    <script>
            var modal = document.getElementById("myModal");
            var btn = document.getElementById("myBtn");
            var span = document.getElementsByClassName("close")[0];

            btn.onclick = function () {
                modal.style.display = "block";
            }

            span.onclick = function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
    </script>


</div>

